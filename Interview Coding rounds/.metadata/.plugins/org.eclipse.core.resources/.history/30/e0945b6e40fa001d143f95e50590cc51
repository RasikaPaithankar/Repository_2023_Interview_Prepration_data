package com.test;

public class SeperateBits {

	public static void main(String[] args) {
		int[] arr = new int[]{0,1,0,0,1,1,1,0,1};
		seperate0sAnd1s(arr);
	}

	private static void seperate0sAnd1s(int[] arr) {
		
		for(int i = 0; i < arr.length ; i++ ) 
		{
			int k = 0;
			for(int j = 1; j< arr.length; j++) 
			{
				if(arr[j] != 0) 
				{
					k = j;
					continue;
				} else 
				{
					arr[j] = arr[k];
					arr[k] = 0; 
				}
			}
			
		}
		for (int m : arr) {
			
			System.out.print(m + " ");
		}
	}

}
